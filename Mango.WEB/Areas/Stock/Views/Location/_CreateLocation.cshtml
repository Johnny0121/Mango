@model Mango.WEB.Areas.Stock.Models.Location.CreateViewModel 

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">Create Kitchen Space</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <form id="formCreateLocation" asp-area="Stock" asp-controller="Location" asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="UserUID" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" class="form-control" aria-describedby="nameHelp" placeholder="Enter Kitchen Name">
                <small id="nameHelp" class="form-text text-muted">This is the name of the space you can assign your stocks to.</small>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label><label class="ml-1 text-danger">(Optional)</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter Description"></textarea>
                <small id="descriptionHelp" class="form-text text-muted">Provide a description for your new kitchen space.</small>
            </div>
            <div class="form-group">
                <label asp-for="Floor"></label><label class="ml-1 text-danger">(Optional)</label>
                <input asp-for="Floor" type="text" class="form-control" aria-describedby="floorHelp" placeholder="Enter Floor Name">
                <small id="floorHelp" class="form-text text-muted">Your kitchen might be located on a building floor. Provide a floor number here.</small>
            </div>
            <div class="form-group">
                <label asp-for="Address"></label><label class="ml-1 text-danger">(Optional)</label>
                <input asp-for="Address" type="text" class="form-control" aria-describedby="nameHelp" placeholder="Enter Address">
                <small id="addressHelp" class="form-text text-muted">Your kitchen might be located at a different address. Provide an address here.</small>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Create Kitchen</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </form>
    </div>
</div>