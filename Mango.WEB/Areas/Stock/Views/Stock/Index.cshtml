@model Mango.WEB.Areas.Stock.Models.Stock.IndexViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Stock Management";
}

<div class="container-fluid pt-3 pb-1">
    <div class="jumbotron text-center text-dark" style="background-color: #8995c4">
        <h1 class="display-4 font-weight-bold">@ViewData["Title"].</h1>
        <p class="lead font-weight-normal">Manage, track and keep your stocks organised. Setup notifications of missing or running-low items.</p>
    </div>

    <div class="jumbotron bg-light pt-4" style="background-color: #2479a6">
        <h3>My Kitchens</h3>
        <div id="kitchens">
            @if (Model.Kitchens != null && Model.Kitchens.Count > 0)
            {
                <div class="d-flex">
                    @foreach (var kitchen in Model.Kitchens)
                    {
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@(!string.IsNullOrWhiteSpace(kitchen.Name) ? kitchen.Name : "Unnamed kitched")</h5>
                                <p class="card-text">@(!string.IsNullOrWhiteSpace(kitchen.Description) ? kitchen.Description : "No description")</p>

                                @if (!string.IsNullOrWhiteSpace(kitchen.Floor))
                                {
                                    <p class="card-text"><strong>Floor:</strong>@kitchen.Floor</p>
                                }

                                @if (!string.IsNullOrWhiteSpace(kitchen.Address))
                                {
                                    <p class="card-text"><strong>Address:</strong>@kitchen.Address</p>
                                }

                                <a href="#" class="btn btn-success">Check Stocks</a>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="lead">You haven't created any kitchen yet. Create one <a id="createLocation" class="lead" href="#" data-url='@Url.Action("CreateModal", "Location", new { Area = "Stock" })'>here</a>.</p>
            }
        </div>
    </div>
</div>

@section Scripts
{
    <environment include="Development">
        <script src="~/js/Areas/Stocks/index.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/Areas/Stocks/index.min.js"></script>
    </environment>

<script>
    $('.toast').toast("show");
</script>
}