@page
@model LoginModel

@{
    ViewData["Title"] = "Log in to your account";
}

<div class="container-fluid p-4 bg-warning">
    <div class="container my-4">
        <div class="card" style="border: none;">
            <div class="card-body">
                <h3 class="font--heading font-weight-bold">@ViewData["Title"]</h3>
                <p>Don't have an account? <a class="ml-2" asp-area="Identity" asp-page="/Account/Register">Register for one. It's Free!</a></p>
                <hr>
                <div asp-validation-summary="All" class="text-danger"></div>
                <form id="account" method="post">
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="d-flex">
                        <div class="checkbox mr-4">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <a class="mr-4" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </div>

                    <button type="submit" class="btn btn-primary mt-3 px-4" href="#" role="button">Log in</button>
                </form>
            </div>
        </div>
    </div>
</div>

